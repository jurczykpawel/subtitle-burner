# ==========================================
# APP (required)
# ==========================================
AUTH_SECRET=  # Generate with: openssl rand -base64 32
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ==========================================
# POSTGRES (required)
# ==========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=subtitle_burner
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/subtitle_burner

# ==========================================
# REDIS (required for server-side rendering)
# ==========================================
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# ==========================================
# MINIO (required for VPS mode storage)
# ==========================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=subtitle-burner
MINIO_USE_SSL=false  # Set to "true" for HTTPS connections to MinIO

# ==========================================
# SECURITY (optional)
# ==========================================
# HSTS_MAX_AGE=63072000  # HSTS max-age in seconds (default: 63072000 = 2 years, set to 0 to disable)

# ==========================================
# EMAIL / MAGIC LINKS (optional)
# ==========================================
# SMTP_HOST=smtp.resend.com
# SMTP_PORT=587
# SMTP_USER=resend
# SMTP_PASS=re_xxxxx
# EMAIL_FROM=noreply@yourdomain.com

# ==========================================
# CLOUD MODE: Supabase Storage (optional)
# ==========================================
# NEXT_PUBLIC_SUPABASE_URL=
# SUPABASE_SERVICE_ROLE_KEY=
# SUPABASE_STORAGE_BUCKET=subtitle-burner

# ==========================================
# CLOUD MODE: Inngest Queue (optional)
# ==========================================
# INNGEST_EVENT_KEY=
# INNGEST_SIGNING_KEY=

# ==========================================
# E2E TESTING (optional)
# ==========================================
# OPENROUTER_API_KEY=  # For AI-powered screenshot analysis in Playwright E2E tests (free models available)
