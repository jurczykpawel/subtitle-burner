{
  "name": "subtitle-burner",
  "private": true,
  "license": "MIT",
  "packageManager": "bun@1.3.9",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "overrides": {
    "fast-xml-parser": ">=5.3.6",
    "nodemailer": ">=7.0.7"
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "prisma": "~6.3.1",
    "turbo": "^2.8.10",
    "typescript": "^5.9.3"
  }
}
