generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Tier {
  FREE
  PRO
  ENTERPRISE
}

enum JobStatus {
  QUEUED
  PROCESSING
  COMPLETED
  FAILED
}

model User {
  id         String      @id @default(uuid())
  email      String      @unique
  tier       Tier        @default(FREE)
  videos     Video[]
  renderJobs RenderJob[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Video {
  id         String      @id @default(uuid())
  userId     String
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  filename   String
  filePath   String
  fileSize   BigInt
  duration   Float
  width      Int
  height     Int
  mimeType   String      @default("video/mp4")
  subtitles  Subtitle[]
  renderJobs RenderJob[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@index([userId])
}

model Subtitle {
  id        String   @id @default(uuid())
  videoId   String
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  content   Json     // Array of SubtitleCue objects
  style     Json?    // SubtitleStyle object
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([videoId])
}

model RenderJob {
  id          String    @id @default(uuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  videoId     String
  video       Video     @relation(fields: [videoId], references: [id], onDelete: Cascade)
  style       Json
  status      JobStatus @default(QUEUED)
  progress    Int       @default(0)
  outputUrl   String?
  error       String?
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@index([videoId])
  @@index([status])
}
